{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["node_modules", "dist"]
}
